# כתובת ל-PostgreSQL שרץ בקונטיינר אחר (RelDB)
DB_DSN=postgresql+psycopg://missions_user:pg123@host.docker.internal:5432/missions_db

PORT=8080

# Path where JSON contracts are stored (relative to service root)
CONTRACTS_DIR=app/contracts

# Comma-separated list of allowed tables (lowercase or will be normalized)
ALLOWED_TABLES=["event_logs_sensors","devices"]
# If true, reject unknown fields from payloads
STRICT_UNKNOWN_FIELDS=true
